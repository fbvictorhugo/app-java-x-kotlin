<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.fbvictorhugo.k.barreirasanitaria">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.ListaBarreirasActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/title_activity_barreiras" />
        <activity
            android:name=".ui.DetalhesBarreiraSanitariaActivty"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/title_activity_detalhes_barreira_sanitaria" />
        <activity
            android:name=".ui.DetalhesPessoaActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/title_activity_detalhes_pessoa" />
        <activity
            android:name=".ui.PesquisaPessoasActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/title_activity_pesquisa_pessoas" />
        <activity
            android:name=".ui.QuestionarioActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/title_activity_questionario" />
    </application>

</manifest>